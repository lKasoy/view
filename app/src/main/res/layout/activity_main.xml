<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.view.CustomView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="4dp"
        custom:lineWidth="40dp"
        custom:paintColor="@color/aqua"
        custom:radiusRounding="10dp" />

    <com.example.view.CustomLinearLayout
        android:id="@+id/customLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:aBackgroundColor="@color/color1"
        custom:aPadding="4dp"
        custom:aTextColor="@color/color2"
        custom:aTextSize="18sp" />

</LinearLayout>